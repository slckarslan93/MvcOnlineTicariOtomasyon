@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<BillsItems>
@{
    ViewBag.Title = "detailBills";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>


<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BillsItemsId</td>
            <td>@x.Description</td>
            <td>@x.Quantity</td>
            <td>@x.UnitPrice</td>
            <td>@x.Price</td>
        </tr>
    }

</table>
<a href="/Bills/newBillsItem" class="btn btn-default"style="background-color:darksalmon">Yeni kalem Girişi</a>

